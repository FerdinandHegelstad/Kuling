<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/settings_scroll_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/side_margin_child"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.UserPreferencesActivity"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_constraint_parent">

            <TextView
                android:layout_marginTop="@dimen/side_margin"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_text_view_settings"
                android:text="@string/navigation_activity_bottom_bar_settings"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/header_text_size"
                android:fontFamily="@font/lato_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/settings_text_view_settings"
            android:id="@+id/settings_constraint_permissions_parent"
            android:clickable="true"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/settings_constraint_permissions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_permissions"
                    android:id="@+id/settings_text_my_permissions"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings_permissions_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_expand_more_24px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/settings_text_my_permissions"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGrey"
                android:id="@+id/settings_line_my_permissions"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                app:layout_constraintTop_toBottomOf="@+id/settings_constraint_permissions_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margin_child"
            android:layout_marginEnd="@dimen/side_margin_child"
            android:paddingBottom="@dimen/side_margin_child"
            android:id="@+id/settings_permissions_child"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/settings_constraint_permissions_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/settings_constraint_my_permissions_switch"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings_location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_location_on_24px"
                    android:tint="@color/textGrey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/settings_location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/settings_text_switch_desc"
                    android:fontFamily="@font/nunito"
                    android:text="@string/allow_permissions"
                    android:textColor="@color/colorBlue"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_text_permission_desc"
                android:textColor="@color/textGrey"
                android:fontFamily="@font/nunito"
                android:text="@string/permissions_desc_on"
                app:layout_constraintTop_toBottomOf="@+id/settings_constraint_my_permissions_switch"
                />
            <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/settings_text_permission_desc"
                android:textColor="@color/textGrey"
                android:layout_width="match_parent"
                android:fontFamily="@font/nunito"
                android:layout_height="wrap_content"
                android:id="@+id/settings_text_permission_desc_link"
                android:text="@string/permissions_desc_on_link"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/settings_constraint_preferences_parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_permissions_child">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                android:id="@+id/settings_constraint_preferences_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_weather_preferences"
                    android:id="@+id/settings_text_my_preferences"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings_preferences_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_expand_more_24px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGrey"
                android:id="@+id/settings_line_my_preferences"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                app:layout_constraintTop_toBottomOf="@+id/settings_constraint_preferences_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margin_child"
            android:layout_marginEnd="@dimen/side_margin_child"
            android:paddingBottom="@dimen/side_margin_child"
            android:id="@+id/settings_constraint_preferences_child"
            android:visibility="gone"

            app:layout_constraintTop_toBottomOf="@id/settings_constraint_preferences_parent"

            >

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_constraint_images"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/settings_image_kiting_man"
                    android:src="@drawable/ic_kitesurfing_settings"
                    android:layout_weight="1"
                    android:contentDescription="@string/settings_icon_desc" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/settings_constraint_color_disc_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/settings_constraint_color_disc_child"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:weightSum="3">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/settings_constraint_red"
                            android:layout_weight="1">

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:id="@+id/settings_color_red"
                                android:background="@color/colorIndicatorRed"/>

                            <TextView
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/settings_text_indicator_red_desc"
                                android:layout_width="130dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/nunito"
                                android:layout_height="wrap_content"
                                android:text="@string/user_preferences_activity_difficult_desc"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toEndOf="@+id/settings_color_red"
                                android:scrollHorizontally="false"
                                android:textColor="@color/textGrey"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/settings_constraint_yellow"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:id="@+id/settings_color_yellow"
                                app:layout_constraintTop_toTopOf="parent"
                                android:background="@color/colorIndicatorYellow"
                                app:layout_constraintLeft_toLeftOf="parent"/>

                            <TextView

                                android:id="@+id/user_preferences_activity_text_indicator_yellow_desc"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:text="@string/user_preferences_activity_mediocre_desc"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/nunito"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/settings_color_yellow"
                                android:textSize="13sp"
                                app:layout_constraintRight_toRightOf="parent"
                                android:scrollHorizontally="false"
                                android:textColor="@color/textGrey"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/settings_constraint_green"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:id="@+id/settings_color_green"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:background="@color/colorIndicatorGreen"/>

                            <TextView
                                android:id="@+id/user_preferences_activity_text_indicator_green_desc"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:text="@string/user_preferences_activity_perfect_desc"
                                android:layout_marginStart="15dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/nunito"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/settings_color_green"
                                app:layout_constraintRight_toRightOf="parent"
                                android:scrollHorizontally="false"
                                android:textColor="@color/textGrey"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_constraint_slider_desc"
                app:layout_constraintTop_toBottomOf="@+id/settings_constraint_images"
                >

                <TextView

                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:id="@+id/user_preferences_text_slider_desc"
                    android:text="@string/user_preferences_slider_desc"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/settings_constraint_slider_desc"


                android:background="@drawable/preference_sliders_background"
                android:weightSum="2"
                android:orientation="vertical"
                android:baselineAligned="false"
                android:id="@+id/settings_constraint_sliders">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/settings_constraint_slider_wind_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_constraint_wind_desc"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="parent">

                        <TextView
                            android:textSize="16sp"
                            android:id="@+id/settings_text_desc_wind_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/user_preferences_activity_wind_speed_desc"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView

                            android:id="@+id/settings_text_wind_speed_overview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="@string/user_preferences_activity_speed_ms_desc"
                            android:textSize="16sp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/settings_text_desc_wind_speed"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/settings_text_desc_wind_speed"
                            app:layout_constraintRight_toRightOf="parent"
                            android:fontFamily="@font/nunito"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <io.apptik.widget.MultiSlider
                        android:id="@+id/settings_activity_seekbar_windspeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:foregroundTint="@color/colorIndicatorGreen"
                        app:drawThumbsApart="true"
                        app:rangeColor="@color/colorIndicatorGreen"
                        app:thumbColor="@color/colorIndicatorGreen"

                        app:layout_constraintTop_toBottomOf="@+id/settings_constraint_wind_desc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/settings_constraint_slider_gust_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_constraint_gust_desc"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="parent">

                        <TextView
                            android:id="@+id/settings_text_desc_gust_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/user_preferences_activity_gust_speed_desc"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/settings_text_wind_gust_overview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:textSize="16sp"
                            android:text="@string/user_preferences_activity_speed_ms_desc"
                            android:fontFamily="@font/nunito"
                            app:layout_constraintBaseline_toBaselineOf="@+id/settings_text_desc_gust_speed"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/settings_text_desc_gust_speed"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <io.apptik.widget.MultiSlider

                        android:id="@+id/settings_seekbar_gustspeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:foregroundTint="@color/colorIndicatorGreen"
                        app:drawThumbsApart="true"
                        app:rangeColor="@color/colorIndicatorGreen"
                        app:thumbColor="@color/colorIndicatorGreen"
                        app:layout_constraintTop_toBottomOf="@+id/settings_constraint_gust_desc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_constraint_bottom"
                app:layout_constraintTop_toBottomOf="@+id/settings_constraint_sliders">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/settings_constraint_text_bottom"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_text_default_desc"
                        android:fontFamily="@font/nunito"
                        android:text="@string/user_preferences_default_desc"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/settings_bottom_text_metrics"
                        app:layout_constraintTop_toBottomOf="@+id/settings_text_default_desc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/settings_constraint_left_bottom_text"
                            android:layout_weight="1">
                            <TextView

                                app:layout_constraintRight_toRightOf="parent"
                                android:id="@+id/settings_text_left_wind"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                android:fontFamily="@font/nunito"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:textColor="@color/colorBlack"
                                android:gravity="center"
                                android:text="@string/wind_speed"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_text_left_gust"
                                android:gravity="center"
                                app:layout_constraintTop_toBottomOf="@+id/settings_text_left_wind"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/nunito"
                                android:text="@string/wind_gusts"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/settings_constraint_right_bottom_text"
                            android:layout_weight="1">
                            <TextView

                                app:layout_constraintRight_toRightOf="parent"
                                android:id="@+id/settings_text_right_wind"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                android:fontFamily="@font/nunito"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:textColor="@color/colorBlack"
                                android:gravity="center"
                                android:text="@string/default_settings_windspeed"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/settings_text_right_gust"
                                app:layout_constraintTop_toBottomOf="@+id/settings_text_right_wind"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/nunito"
                                android:gravity="center"
                                android:text="@string/default_settings_gust"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/settings_button_apply_settings"
                        android:layout_width="250dp"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/user_preferences_activity_text_apply"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/settings_bottom_text_metrics"
                        app:strokeColor="#FFFFFF" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/settings_constraint_about_parent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/settings_constraint_preferences_child">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_constraint_about_text"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:id="@+id/settings_text_about"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings_about_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_expand_more_24px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGrey"
                android:id="@+id/settings_line_about"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"

                app:layout_constraintTop_toBottomOf="@+id/settings_constraint_about_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="@dimen/side_margin_child"
            android:id="@+id/settings_constraint_about_child"
            app:layout_constraintTop_toBottomOf="@+id/settings_constraint_about_parent"
            android:visibility="gone"
            >



            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/settings_about_appname_logo"
                android:text="@string/app_name"
                android:fontFamily="@font/yellowtail"
                android:textSize="60sp"
                android:textColor="@color/colorBlue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:id="@+id/settings_text_about_desc"
                app:layout_constraintTop_toBottomOf="@id/settings_about_appname_logo"
                android:text="@string/about_desc"
                android:textColor="@color/textGrey"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/settings_constraint_privacy_parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_constraint_about_child"
            android:clickable="true"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_constraint_privacy_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin">

                <TextView
                    android:id="@+id/settings_text_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/privacy"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings_privacy_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_expand_more_24px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineGrey"
                android:id="@+id/settings_privacy_line"
                android:layout_marginStart="@dimen/side_margin"
                android:layout_marginEnd="@dimen/side_margin"
                app:layout_constraintTop_toBottomOf="@+id/settings_constraint_privacy_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margin_child"
            android:layout_marginEnd="@dimen/side_margin_child"
            android:paddingBottom="@dimen/side_margin_child"
            android:id="@+id/settings_constraint_privacy_child"
            app:layout_constraintTop_toBottomOf="@id/settings_constraint_privacy_parent"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/settings_text_privacy_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:autoLink="web"
                android:fontFamily="@font/nunito"
                android:text="@string/privacy_desc"
                android:textColor="@color/textGrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>








</ScrollView>